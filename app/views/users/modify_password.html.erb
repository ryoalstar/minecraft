<% content_for :title, "Modify Password - Minecraft PE Server List" %>

<div class="container">

  <div class="row">
    <div class="col-md-12 text-right">
      <h1 class="page_header">Change Password</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Change Password</h3>
          <hr>
          <%= bootstrap_form_for(@user, as: 'user', url: '') do |f| %>
              <div class="field">
                <%= f.text_field :encrypted_password, label: 'Current Password', :value => '', autofocus: true %>
              </div>
              <div class="field">
                <%= f.text_field :n, label: 'Current Password', :value => '', autofocus: true %>
              </div>
            <div class="form-group">
              <label>New Password</label>
              <input type="password" class="form-control" name="new_password">
            </div>
            <div class="form-group">
              <label>Repeat Password</label>
              <input type="password" class="form-control" name="repeat_password">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block">Set Password</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>