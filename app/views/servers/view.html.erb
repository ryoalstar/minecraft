<% content_for :title, @server.name + " - Minecraft PE Servers List" %>

<div class="container">

  <div class="row">
    <div class="col-md-12 text-right">

      <h1 class="page_header"><%= @server.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-server"></i> <%= @server.name %></div>
        <table class="table table-hover table-striped">
          <tr>
            <td colspan="2"><i class="fa fa-info-circle"></i><strong> Server Information</strong></td>
          </tr>
          <tr>
            <td><strong>Owner</strong></td>
            <td><%= @server.owner %></td>
          </tr>
          <tr>
            <td><strong>Status</strong></td>
            <td><span class="label <%= @server.status == 1 ? "label-success" : "label-danger" %>"><%= @server.status == 1 ? "Online" : "Offline" %></td>
          </tr>
          <tr>
            <td><strong>IP</strong></td>
            <td><%= @server.ip %></td>
          </tr>
          <tr>
            <td><strong>Port</strong></td>
            <td><%= @server.port %></td>
          </tr>
          <% unless @server.website.nil? %>
          <tr>
            <td><strong>Website</strong></td>
            <td><%= link_to @server.website, 'http://' + @server.website, :rel => 'nofollow' %></td>
          </tr>
          <% end %>
          <% unless @server.last_pinged.nil? %>
              <tr>
                <td><strong>Last Pinged</strong></td>
                <td><%= time_ago_in_words(Time.now.ago(Time.now.to_i - @server.last_pinged.to_i)) %> ago</td>
              </tr>
          <% end %>
          <tr>
            <td colspan="2"><i class="fa fa-bar-chart-o"></i><strong> Server Statistics</strong></td>
          </tr>
          <tr>
            <td><strong>Rank</strong></td>
            <td>1</td>
          </tr>
          <tr>
            <td><strong>Players</strong></td>
            <td><%= @server.players %>/<%= @server.slots %></td>
          </tr>
          <tr>
            <td><strong>Votes</strong></td>
            <td><%= @server.votes %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if @server.banner.url != '/images/nobanner' %>
              <%= image_tag(@server.banner.url, :width => 468, :height => 60, :display => 'block') %>
          <% else %>
              <%= image_tag('/banners/nobanner.png', :width => 468, :height => 60, :display => 'block') %>
          <% end %>
          <%= content_tag(:div, flash[:notice], :id => "flash_notice", :style => 'color: green') if flash[:notice] %>
          <%= content_tag(:div, flash[:error], :id => "flash_error", :style => 'color: red') if flash[:error] %>

          <%= bootstrap_form_for(@server, as: 'server', url: '', method: 'post') do |f| %>
              <div class="field">
                <label>Ingame username</label>
                <input type="text" class="form-control" style="max-width: 43%">
                </input>
              </div>
             <br>

              <div class="actions">
                <p style="color: black !important;">
                  <%= solvemedia_puzzle %>
                </p>

                <noscript>
                  <p>We apologize, but JavaScript is required order to vote.</p>
                </noscript>

                <br>
                <%= f.submit 'Vote for ' + @server.name, :class => 'btn btn-success btn-lg' %>
              </div>
          <% end %>
          <hr>

          <p>
            <%= @server.description %>
          </p>

        </div>

      </div>
    </div>
  </div>


</div>
