<% content_for :title, "Sign in - Minecraft PE Server List" %>

<div class="container">


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="page_header text-center">Minecraft PE Servers</h1>
    <div class="panel panel-default">
      <div class="panel-body">

        <%= content_tag(:div, flash[:error], :id => "flash_error", :style => 'color: red') if flash[:error] %>
        <%= content_tag(:div, flash[:notice], :id => "flash_notice", :style => 'color: green') if flash[:notice] %>
        <%= content_tag(:div, flash[:alert], :id => "flash_alert", :style => 'color: red') if flash[:alert] %>

        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions ">
    <%= f.submit 'Log in', :class => 'btn btn-success btn-block' %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
<br>
      </div>
    </div>
  </div>
</div>
 </div>
