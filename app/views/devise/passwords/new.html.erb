<% content_for :title, "Reset Password - Minecraft PE Server List" %>

<div class="container">


  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="page_header text-center">Minecraft PE Servers</h1>
      <div class="panel panel-default">
        <div class="panel-body">

        <h2>Forgot your password?</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true %>
          </div>

              <br>
          <div class="actions">
           <div style="text-align: center;"><%= f.submit "Reset Password" %></div>
          </div>

        <% end %>


<%= render "devise/shared/links" %>
        <br><br>
        </div>
      </div>
    </div>
  </div>
</div>